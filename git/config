[include]
path = ~/.config/git/personal.inc

[includeIf "gitdir:~/src/github.com/raman-antanevich/"]
path = ~/.config/git/productmadness.inc

[pull]
ff = only

[alias]
cl = clone
br = branch
cp = cherry-pick
aa = add -A .
cm = commit -m
st = status
co = checkout
cob = checkout -b
del = branch -D
undo = reset HEAD^ --mixed
done = !git push origin HEAD
unstage = reset --soft HEAD^
ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate
ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%green\\ [%cn]" --decorate --numstat
fl = log -u
